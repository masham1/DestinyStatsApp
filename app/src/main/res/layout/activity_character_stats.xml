<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context="com.masham31.destinystats.CharacterStats">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/relativeLayout6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kill/Death \nRatio:"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:typeface="normal"
                android:textColor="@color/primary_text_material_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/killDeath"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/primary_text_material_light"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView"
                android:paddingLeft="25dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:id="@+id/kdImg"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout5"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="false"
            android:layout_marginTop="26dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Kills:"
                android:id="@+id/textView5"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalKills"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView5"
                android:paddingLeft="5dp"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/totalKillsImg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            android:layout_below="@+id/relativeLayout5"
            android:layout_alignParentEnd="true"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precision Kills:"
                android:id="@+id/textView3"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/precisionKills"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:paddingLeft="5dp"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/precisionImg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignParentStart="true"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longest Spree:"
                android:id="@+id/textView4"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/killSpree"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView4"
                android:paddingLeft="5dp"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/spreeImg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:padding="5dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combat Rating:"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView2"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/combatRating"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:paddingLeft="5dp"
                android:textSize="17dp"
                android:textColor="@color/primary_text_material_light"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/combatImg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shadow"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"></RelativeLayout>
</RelativeLayout>